{
  "name": "fictional-news-generator",
  "version": "1.0.0",
  "description": "AI-powered fictional news article generator with custom templates and analytics",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch src/server/index.ts",
    "client:dev": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/server/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage && playwright test",
    "version:patch": "npm version patch --no-git-tag-version && git add package.json package-lock.json && NEW_VERSION=$(node -p \"require('./package.json').version\") && git commit -m \"chore(release): bump version to $NEW_VERSION\" && git tag \"v$NEW_VERSION\"",
    "version:minor": "npm version minor --no-git-tag-version && git add package.json package-lock.json && NEW_VERSION=$(node -p \"require('./package.json').version\") && git commit -m \"chore(release): bump version to $NEW_VERSION\" && git tag \"v$NEW_VERSION\"",
    "version:major": "npm version major --no-git-tag-version && git add package.json package-lock.json && NEW_VERSION=$(node -p \"require('./package.json').version\") && git commit -m \"chore(release): bump version to $NEW_VERSION\" && git tag \"v$NEW_VERSION\"",
    "release:patch": "npm run version:patch && git push && git push --tags",
    "release:minor": "npm run version:minor && git push && git push --tags",
    "release:major": "npm run version:major && git push && git push --tags",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky || true"
  },
  "keywords": [
    "ai",
    "news",
    "generator",
    "fictional",
    "content"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.0.0",
    "i18next": "^25.7.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.1",
    "openai": "^6.10.0",
    "puppeteer": "^24.32.0",
    "recharts": "^3.5.1",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "svg2png-wasm": "^1.4.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/marked": "^5.0.2",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.49.1",
    "postcss": "^8.4.49",
    "prisma": "^5.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.7.4",
    "react-router-dom": "^6.28.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.15",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  }
}
